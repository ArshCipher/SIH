# Public Health Chatbot Configuration

# Database Configuration
DATABASE_URL=sqlite:///./health_chatbot.db

# WhatsApp Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_verify_token

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=your_twilio_number

# Health API Configuration
HEALTH_API_BASE_URL=https://api.example-health.gov.in
HEALTH_API_KEY=your_health_api_key

# Translation Configuration
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key

# Monitoring Configuration
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO

# Chatbot Configuration
CHATBOT_CONFIDENCE_THRESHOLD=0.7
MAX_CONVERSATION_HISTORY=10
DEFAULT_LANGUAGE=en

# Alert Configuration
OUTBREAK_CHECK_INTERVAL=3600  # 1 hour in seconds
VACCINATION_REMINDER_INTERVAL=86400  # 24 hours in seconds
